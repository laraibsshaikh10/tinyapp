<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <!--to display username once logged in-->
    <% if (username) { %>
      <span>Logged in as:, <%= username %></span>
      <form method="POST" class = "logout-form" action= "/logout">
        <button type="submit" class="logout-button">Logout</button>
      </form>
    <% } else { %>
    <!--Update the header to link to the login and registration page rather than showing the form itself by:-->
    <!-- link for registration page -->
    <a class="nav-item nav-link" href="/register">register</a>

    <!-- link for login page -->
    <a class="nav-item nav-link" href="/login">Login</a>
     <% } %>
  </nav>  
</header>